{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "brace-style": "error",
    "indent": ["error", 2],
    "no-console": "off",
    "no-irregular-whitespace":"error",
    "no-octal-escape": "error",
    "no-undef":"error",
    "no-use-before-define": "off",
    "semi": ["error", "always"],
    "semi-style": ["error", "last"]
  }
}