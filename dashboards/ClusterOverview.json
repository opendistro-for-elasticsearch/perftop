{
  "endpoint": "localhost:9600",
  "gridOptions": {
    "rows": 12,
    "cols": 12
  },
  "graphs": {
    "tables": [
      {
        "queryParams" : {
          "metrics": "CPU_Utilization,IO_ReadThroughtput,IO_WriteThroughput",
          "aggregates": "sum,sum,sum",
          "dimensions": "Operation,IndexName,ShardID",
          "sortBy": "CPU_Utilization"
        },
        "options": {
          "gridPosition": {
            "row": 0,
            "col": 0,
            "rowSpan": 4,
            "colSpan": 12
          },
          "label": "Resource Metrics",
          "keys": false,
          "fg": "green",
          "selectedFg": "green",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "Latency,HTTP_RequestDocs",
          "aggregates": "avg,sum",
          "dimensions": "Operation,HTTPRespCode,Indices",
          "sortBy": "HTTP_RequestDocs"
        },
        "options": {
          "gridPosition": {
            "row": 4,
            "col": 0,
            "rowSpan": 4,
            "colSpan": 7.5
          },
          "label": "Workload",
          "keys": false,
          "fg": "green",
          "selectedFg": "green",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      }
    ],
    "bars": [
      {
        "queryParams" : {
          "metrics": "IO_WriteThroughput",
          "aggregates": "sum",
          "dimensions": "Operation"
        },
        "options": {
          "gridPosition": {
            "row": 8,
            "col": 0,
            "rowSpan": 4,
            "colSpan": 6
          },
          "label": "Write Throughput (Bps) per Operation",
          "labelColor": "red",
          "barWidth": 12,
          "xOffset": 2,
          "maxHeight": 6,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "CPU_Utilization",
          "aggregates": "sum",
          "dimensions": "Operation"
        },
        "options": {
          "gridPosition": {
            "row": 8,
            "col": 6,
            "rowSpan": 4,
            "colSpan": 6
          },
          "label": "CPU (cores) per Operation",
          "labelColor": "blue",
          "barWidth": 12,
          "xOffset": 2,
          "maxHeight": 6,
          "refreshInterval": 5000
        }
      }
    ],
    "lines": [
      {
        "queryParams" : {
          "metrics": "CPU_Utilization",
          "aggregates": "sum",
          "dimensions": "Operation"
        },
        "options": {
          "gridPosition": {
            "row": 4,
            "col": 7.5,
            "rowSpan": 4,
            "colSpan": 4.5
          },
          "label": "Elasticsearch Operation CPU (cores) per Node",
          "showNthLabel": 3,
          "showLegend": true,
          "legend": { "width": 10 },
          "xAxis": ["0:00", "0:05", "0:10", "0:15", "0:20", "0:25", "0:30", "0:35", "0:40", "0:45", "0:50", "0:55"],
          "refreshInterval": 5000
        }
      }
    ]
  }
}